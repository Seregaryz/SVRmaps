<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SVRmaps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontBold">@font/roboto_bold</item>
        <item name="fontRegular">@font/roboto_regular</item>
        <item name="fontMedium">@font/roboto_medium</item>
        <item name="fontLight">@font/roboto_light</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryLightColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.Primary" parent="@style/Widget.AppCompat.Button">
        <item name="backgroundTint">@color/color_states_buttons</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Body4</item>
    </style>

    <style name="Button.OutlinedPrimary" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@drawable/selector_bg_outlined_primary</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Body2</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="lineHeight">12sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

